<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('header') -%>
    <link href="css/owl_scss/owl.carousel.min.css" type="text/css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <%- include ('navbar') -%>
      <div class="content">
        <div class="row no-gutters" style="margin-top:5%; justify-content:center;">
          <div class="col-lg-8 pr-lg-2">
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">Settings</h5>
              </div>
              <div class="card-body bg-light">
                <h5 class="fs-0">Add Candidate</h5>
                <p class="fs--1">Use this to add someone to the database</p>
                <a class="btn btn-falcon-primary d-block" data-toggle="modal" data-target="#addCandidate">Add</a>
              </div>
            </div>
          </div>
        </div>
        <section class="section">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12 text-center">
                <h3>Candidates</h3>
                <p>Count: 10</p>
              </div>
            </div>
          </div>
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="/img/bros.jpg" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
        </div>
        </section>
      </div>
    </div>

    <div class="modal fade" id="addCandidate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <form class="" action="/addcandidate" enctype="multipart/form-data" method="post">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">
                Add Candidate
              </h5>
              <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span class="font-weight-light" aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" name="name" type="text" placeholder="Name...">
              </div>
              <div class="form-group">
                <label for="position">Position</label>
                <input class="form-control" name="position" type="text" placeholder="VPM/Pledge">
              </div>
              <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control-file" name="image" type="file">
              </div>
            </div>
            <div class="modal-footer">
              <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
              <input type="submit" class="btn btn-primary btn-sm paid" type="button" value="Add">
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/plugins.min.js"></script>
    <script src="/lib/stickyfilljs/stickyfill.min.js"></script>
    <script src="/lib/sticky-kit/sticky-kit.min.js"></script>
    <script src="/lib/is_js/is.min.js"></script>
    <script src="/js/theme.js"></script>
    <script src="/js/owljs/owl.carousel.min.js"></script>
    <script src="/js/bidvote.js"></script>
  </body>
</html>
